<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ruta_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/iconos_layout"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/textViewNombreRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Ruta"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textViewTipoDeRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Senderismo"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textViewDificultad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dificultad: Media"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/iconos_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <!-- Â¡NUEVO ICONO DE COMPARTIR! -->
        <ImageView
            android:id="@+id/icono_compartir"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_share"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Compartir ruta"/>

        <ImageView
            android:id="@+id/icono_favorito"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_border"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Marcar como favorito"/>

        <ImageView
            android:id="@+id/icono_eliminar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Eliminar ruta"/>
    </LinearLayout>

</RelativeLayout>
